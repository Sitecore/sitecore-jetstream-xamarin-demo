<resources>

    <!-- Base application theme. -->
    <style name="Jetstream.App.Theme" parent="MaterialDrawerTheme.Light.DarkToolbar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="material_drawer_selected_text">@color/color_primary</item>
    </style>

 	<style name="Material.Edittext.Style" parent="Jetstream.App.Theme">
	    <item name="met_baseColor">@android:color/black</item>
	    <item name="met_primaryColor">?colorAccent</item>
	    <item name="met_floatingLabel">highlight</item>
	    <item name="met_singleLineEllipsis">true</item>
	</style>

    <style name="Jetstream.Dialog.Base" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="Settings.Activity.Theme" parent="Jetstream.Dialog.Base">
        <item name="android:windowBackground">@android:color/white</item>    
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
	</style>

    <style name="Destinations.Dialog.Theme" parent="Jetstream.Dialog.Base">
    </style>

</resources>
